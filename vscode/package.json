{
    "name": "starlark",
    "description": "A Starlark language server",
    "author": "Facebook",
    "license": "Apache2",
    "version": "1.0.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/facebookexperimental/starlark-rust"
    },
    "publisher": "facebook",
    "categories": [],
    "keywords": [
        "multi-root ready"
    ],
    "engines": {
        "vscode": "^1.43.0"
    },
    "activationEvents": [
        "onLanguage:starlark"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "starlark",
                "aliases": [
                    "Starlark",
                    "skylark",
                    "Skylark"
                ],
                "extensions": [
                    ".star",
                    ".sky",
                    ".bzl"
                ],
                "configuration": "./syntaxes/starlark.configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "starlark",
                "scopeName": "source.starlark",
                "path": "./syntaxes/starlark.tmLanguage.json"
            }
        ],
        "breakpoints": [
            {
                "language": "starlark"
            }
        ],
        "debuggers": [
            {
                "type": "starlark",
                "label": "Starlark Debug",
                "program": "/usr/bin/env",
                "args": [
                    "starlark",
                    "--dap"
                ],
                "languages": [
                    "starlark"
                ],
                "configurationAttributes": {
                    "launch": {
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "The program to debug.",
                                "default": "${file}"
                            }
                        }
                    }
                },
                "initialConfigurations": [
                    {
                        "type": "starlark",
                        "request": "launch",
                        "name": "Launch Program",
                        "program": "${file}"
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^8.0.3",
        "@types/node": "^12.12.0",
        "@typescript-eslint/parser": "^2.3.0",
        "eslint": "^6.4.0",
        "mocha": "^8.1.1",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "vsce": "^1.88.0"
    }
}
